<MudDialog>
    <DialogContent>
        <MudText>
            @ContentText
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick=Cancel>
            @Localizer[nameof(AppStrings.Cancel)]
        </MudButton>
        <MudButton Color=Color
                   Variant=Variant.Outlined
                   OnClick=Submit>
            @ButtonText
        </MudButton>
    </DialogActions>
</MudDialog>

<MudDialog>
    <DialogContent>
        <MudText>
            @ContentText
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">
            @localizer[nameof(AppStrings.Cancel)]
        </MudButton>
        <MudButton Color="Color"
                   OnClick="Submit"
                   UserAttributes="@(new Dictionary<string, object> { { TestConst.TestId, InformationDialogConst.ConfirmButton } })"
                   Variant="Variant.Filled">
            @ButtonText
        </MudButton>
    </DialogActions>
</MudDialog>
<EditForm Model="Command"
          OnValidSubmit="HandleValidSubmit">
    <CustomValidator @ref="_customValidator" />
    <FluentValidationValidator />

    <MudDialog DefaultFocus="DefaultFocus.LastChild">
        <DialogContent>
            <FritzTextField @bind-Value="Command.Email"
                            For="() => Command.Email"
                            Label="@localizer[nameof(AppStrings.Email)]"
                            UserAttributes="@(new Dictionary<string, object> { { TestConst.TestId, LoginDialogConst.EmailInput } })" />
            <FritzValidationMessage For="() => Command.Email" />

            <FritzPasswordField @bind-Value="Command.Password"
                                For="() => Command.Password"
                                Label="@localizer[nameof(AppStrings.Password)]"
                                UserAttributes="@(new Dictionary<string, object> { { TestConst.TestId, LoginDialogConst.PasswordInput } })" />
            <FritzValidationMessage For="() => Command.Password" />
        </DialogContent>
        <DialogActions>
            <MudButton Color="Color.Primary"
                       OnClick="OpenResendConfirmationEmailDialog">
                <MudText Typo="Typo.subtitle2">
                    @localizer[nameof(AppStrings.ResendConfirmationEmail)]
                </MudText>
            </MudButton>
            <MudSpacer />
            <MudButton Color="Color.Primary"
                       OnClick="OpenForgotPasswordDialog">
                <MudText Typo="Typo.subtitle2">
                    @localizer[nameof(AppStrings.ForgotPassword)]
                </MudText>
            </MudButton>
            <MudSpacer />
            <FritzProcessingButton ButtonText="@localizer[nameof(AppStrings.Login)]"
                                   ButtonType="ButtonType.Submit"
                                   Color="Color.Primary"
                                   @ref="_processingButton"
                                   UserAttributes="@(new Dictionary<string, object> { { TestConst.TestId, LoginDialogConst.LoginButton } })" />
        </DialogActions>
    </MudDialog>
</EditForm>
<AuthorizeView>
    <Authorized>
        <MudStack Row=true
                  Spacing=2
                  AlignItems=AlignItems.Center>
            <MudText UserAttributes=@(new() { { TestConst.TestId, AuthComponentConst.UserNameText} })>
                @context.User.Identity.Name
            </MudText>
            <MudButton Variant=Variant.Filled
                       Color=Color.Secondary
                       OnClick="Logout"
                       UserAttributes=@(new() { { TestConst.TestId, AuthComponentConst.LogoutButton} })>
                @Localizer[nameof(AppStrings.Logout)]
            </MudButton>
        </MudStack>
    </Authorized>
    <NotAuthorized>
        <MudStack Row=true
                  Spacing=2>
            <MudButton Variant=Variant.Filled
                       Color=Color.Secondary
                       OnClick=Login
                       UserAttributes=@(new() { { TestConst.TestId, AuthComponentConst.LoginButton} })>
                @Localizer[nameof(AppStrings.Login)]
            </MudButton>
            <MudButton Variant=Variant.Filled
                       Color=Color.Tertiary
                       OnClick=Register
                       UserAttributes=@(new() { { TestConst.TestId, AuthComponentConst.RegisterButton} })>
                @Localizer[nameof(AppStrings.Register)]
            </MudButton>
        </MudStack>
    </NotAuthorized>
</AuthorizeView>

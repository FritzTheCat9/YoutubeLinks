<AuthorizeView>
    <Authorized>
        <MudStack Row="true"
                  Spacing="2"
                  AlignItems="AlignItems.Center">
            <MudText UserAttributes="@(new Dictionary<string, object> { { TestConst.TestId, AuthComponentConst.UserNameText } })">
                @context.User.Identity?.Name
            </MudText>
            <MudButton Variant="Variant.Filled"
                       Color="Color.Secondary"
                       OnClick="Logout"
                       UserAttributes="@(new Dictionary<string, object> { { TestConst.TestId, AuthComponentConst.LogoutButton } })">
                @localizer[nameof(AppStrings.Logout)]
            </MudButton>
        </MudStack>
    </Authorized>
    <NotAuthorized>
        <MudStack Row="true"
                  Spacing="2">
            <MudButton Variant="Variant.Filled"
                       Color="Color.Secondary"
                       OnClick="Login"
                       UserAttributes="@(new Dictionary<string, object> { { TestConst.TestId, AuthComponentConst.LoginButton } })">
                @localizer[nameof(AppStrings.Login)]
            </MudButton>
            <MudButton Variant="Variant.Filled"
                       Color="Color.Tertiary"
                       OnClick="Register"
                       UserAttributes="@(new Dictionary<string, object> { { TestConst.TestId, AuthComponentConst.RegisterButton } })">
                @localizer[nameof(AppStrings.Register)]
            </MudButton>
        </MudStack>
    </NotAuthorized>
</AuthorizeView>
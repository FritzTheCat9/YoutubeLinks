<EditForm Model="Command"
          OnValidSubmit="HandleValidSubmit">
    <CustomValidator @ref="_customValidator" />
    <FluentValidationValidator />

    <MudDialog DefaultFocus="DefaultFocus.LastChild">
        <DialogContent>
            <FritzTextField @bind-Value="Command.Url"
                            For="() => Command.Url"
                            Label="@localizer[nameof(AppStrings.Url)]"
                            UserAttributes="@(new Dictionary<string, object> { { TestConst.TestId, UpdateLinkDialogConst.UrlInput } })" />
            <FritzValidationMessage For="() => Command.Url" />

            <FritzTextField @bind-Value="Command.Title"
                            For="() => Command.Title"
                            Label="@localizer[nameof(AppStrings.Title)]"
                            UserAttributes="@(new Dictionary<string, object> { { TestConst.TestId, UpdateLinkDialogConst.TitleInput } })" />
            <FritzValidationMessage For="() => Command.Title" />

            <MudCheckBox @bind-Value="Command.Downloaded"
                         Color="Color.Primary"
                         For="() => Command.Downloaded"
                         Label="@localizer[nameof(AppStrings.Downloaded)]"
                         T="bool"
                         UserAttributes="@(new Dictionary<string, object> { { TestConst.TestId, UpdateLinkDialogConst.DownloadedCheckbox } })" />
            <FritzValidationMessage For="() => Command.Downloaded" />
        </DialogContent>
        <DialogActions>
            <FritzProcessingButton ButtonText="@localizer[nameof(AppStrings.Update)]"
                                   ButtonType="ButtonType.Submit"
                                   Color="Color.Primary"
                                   ProcessingButtonText="@localizer[nameof(AppStrings.Updating)]"
                                   @ref="_processingButton"
                                   UserAttributes="@(new Dictionary<string, object> { { TestConst.TestId, UpdateLinkDialogConst.UpdateButton } })" />
        </DialogActions>
    </MudDialog>
</EditForm>
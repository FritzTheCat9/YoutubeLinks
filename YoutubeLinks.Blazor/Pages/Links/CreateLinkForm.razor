<EditForm Model="Command"
          OnValidSubmit="HandleValidSubmit">
    <CustomValidator @ref="_customValidator" />
    <FluentValidationValidator />

    <MudStack AlignItems="AlignItems.Center"
              Justify="Justify.Center"
              Row="true">
        <FritzTextField @bind-Value="Command.Url"
                        For="() => Command.Url"
                        Label="@localizer[nameof(AppStrings.Url)]"
                        ShrinkLabel
                        UserAttributes="@(new Dictionary<string, object> { { TestConst.TestId, CreateLinkFormConst.UrlInput } })"
                        Variant="Variant.Outlined" />

        <FritzProcessingButton ButtonText="@localizer[nameof(AppStrings.Create)]"
                               ButtonType="ButtonType.Submit"
                               Color="Color.Primary"
                               ProcessingButtonText="@localizer[nameof(AppStrings.Creating)]"
                               @ref="_processingButton"
                               UserAttributes="@(new Dictionary<string, object> { { TestConst.TestId, CreateLinkFormConst.CreateButton } })" />
    </MudStack>
    <FritzValidationMessage For="() => Command.Url" />
</EditForm>
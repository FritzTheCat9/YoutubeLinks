<MudButton ButtonType="ButtonType"
           Color="Color"
           Disabled="_processing"
           OnClick="OnClick"
           UserAttributes="UserAttributes">
    @if (_processing)
    {
        <MudProgressCircular Class="ms-n1"
                             Indeterminate=true
                             Size=Size.Small />
        <MudText Class="ms-2">
            @ProcessingButtonText
        </MudText>
    }
    else
    {
        <MudText Typo=Typo.subtitle2>
            @ButtonText
        </MudText>
    }
</MudButton>